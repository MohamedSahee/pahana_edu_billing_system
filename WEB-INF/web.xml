<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Online Billing System</display-name>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

<!--     Servlet Definitions -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddCustomerServlet</servlet-name>
        <servlet-class>servlet.AddCustomerServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EditCustomerServlet</servlet-name>
        <servlet-class>servlet.EditCustomerServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddItemServlet</servlet-name>
        <servlet-class>servlet.AddItemServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UpdateItemServlet</servlet-name>
        <servlet-class>servlet.UpdateItemServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteItemServlet</servlet-name>
        <servlet-class>servlet.DeleteItemServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ViewAccountServlet</servlet-name>
        <servlet-class>servlet.ViewAccountServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>BillServlet</servlet-name>
        <servlet-class>servlet.BillServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HelpServlet</servlet-name>
        <servlet-class>servlet.HelpServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlet.LogoutServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UserManagementServlet</servlet-name>
        <servlet-class>servlet.UserManagementServlet</servlet-class>
    </servlet>

    <!-- Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddCustomerServlet</servlet-name>
        <url-pattern>/AddCustomerServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EditCustomerServlet</servlet-name>
        <url-pattern>/EditCustomerServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddItemServlet</servlet-name>
        <url-pattern>/AddItemServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UpdateItemServlet</servlet-name>
        <url-pattern>/UpdateItemServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteItemServlet</servlet-name>
        <url-pattern>/DeleteItemServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ViewAccountServlet</servlet-name>
        <url-pattern>/ViewAccountServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BillServlet</servlet-name>
        <url-pattern>/BillServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HelpServlet</servlet-name>
        <url-pattern>/HelpServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserManagementServlet</servlet-name>
        <url-pattern>/UserManagementServlet</url-pattern>
    </servlet-mapping>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error404.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/error500.jsp</location>
    </error-page>

    <!-- Security Constraints -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Resources</web-resource-name>
            <url-pattern>/dashboard.jsp</url-pattern>
            <url-pattern>/addCustomer.jsp</url-pattern>
            <url-pattern>/editCustomer.jsp</url-pattern>
            <url-pattern>/manageItems.jsp</url-pattern>
            <url-pattern>/viewAccount.jsp</url-pattern>
            <url-pattern>/bill.jsp</url-pattern>
            <url-pattern>/manageUsers.jsp</url-pattern>
            <url-pattern>/AddCustomerServlet</url-pattern>
            <url-pattern>/EditCustomerServlet</url-pattern>
            <url-pattern>/AddItemServlet</url-pattern>
            <url-pattern>/UpdateItemServlet</url-pattern>
            <url-pattern>/DeleteItemServlet</url-pattern>
            <url-pattern>/ViewAccountServlet</url-pattern>
            <url-pattern>/BillServlet</url-pattern>
            <url-pattern>/UserManagementServlet</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Login Configuration -->
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/index.jsp</form-login-page>
            <form-error-page>/index.jsp?error=1</form-error-page>
        </form-login-config>
    </login-config>

    <!-- Context Parameters -->
    <context-param>
        <param-name>dbUrl</param-name>
        <param-value>jdbc:mysql://localhost:3306/billingdb</param-value>
    </context-param>

    <context-param>
        <param-name>dbUser</param-name>
        <param-value>root</param-value>
    </context-param>

    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>password</param-value>
    </context-param>

    <!-- JSP Configuration -->
    <jsp-config>
        <taglib>
            <taglib-uri>http://java.sun.com/jstl/core</taglib-uri>
            <taglib-location>/WEB-INF/tld/c.tld</taglib-location>
        </taglib>
    </jsp-config>

</web-app>